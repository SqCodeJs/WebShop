{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "jsx": "react",
      "declaration": true
    },
    "include": ["./src/**/*.ts", "src/routes/productsRoutes.js"],
    "exclude": ["node_modules"]
  }
  