{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "./dist",
      "baseUrl": "./",
      "paths": {
        "*": ["src/*", "shared/*"] // Update this line
      },
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "jsx": "react",
      "declaration": true
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules"],
  }
  